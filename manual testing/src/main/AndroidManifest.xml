<manifest
	package="com.matthewtamlin.sliding_intro_screen_manual_testing"
	xmlns:android="http://schemas.android.com/apk/res/android">

	<uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
	<uses-permission android:name="android.permission.PROCESS_OUTGOING_CALLS"/>

	<application
		android:allowBackup="false"
		android:icon="@mipmap/ic_launcher"
		android:label="Manual testing"
		android:supportsRtl="true"
		android:theme="@style/AppTheme">

		<activity
			android:name=".MainActivity">
			<intent-filter>
				<action android:name="android.intent.action.MAIN"/>
				<category android:name="android.intent.category.LAUNCHER"/>
			</intent-filter>
		</activity>

		<activity android:name=".EndActivity"/>
		<activity android:name=".TestSinglePageActivity"/>
		<activity android:name=".TestMultiplePageActivity"/>
		<activity android:name=".TestButtonConfig"/>
		<activity android:name=".TestTransformer"/>
		<activity android:name=".TestPageLock"/>
		<activity android:name=".TestHideStatusBar"/>
		<activity android:name=".TestBehaviours"/>
		<activity android:name=".TestDotIndicator"/>
		<activity android:name=".TestSelectionIndicatorConfig"/>
	</application>
</manifest>